<Window x:Class="GoodsCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="703*"/>
        </Grid.ColumnDefinitions>

        <TabControl x:Name="maintable" Grid.ColumnSpan="2">
            <TabItem x:Name="GoodsTab">

                <DataGrid x:Name="goodsGrid" Height="398" AutoGenerateColumns="False" Margin="192,0,-1,0">
                    <DataGrid.Columns>

                        <DataGridTextColumn Binding="{Binding GOODS_NAME}" Header="Наименование товара"/>
                        <DataGridTextColumn Binding="{Binding CATEGORY_NAME}" Header="Тип товара"/>
                        <DataGridTextColumn Binding="{Binding GOODS_PRICE}" Header="Цена"/>
                        <DataGridTextColumn Binding="{Binding GOODS_DESCRIPTION}" Header="Описание товара"/>

                    </DataGrid.Columns>
                </DataGrid>

                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Width="368">
                        <TextBlock Margin="3" TextAlignment="Center" Width="355"><Run Text="Goods"/></TextBlock>

                    </StackPanel>
                </TabItem.Header>

            </TabItem>
            <TabItem x:Name="checkTab" Margin="-2,-2,-250,0">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Width="54">
                        <TextBlock Margin="3" TextAlignment="Left" Width="85">Check
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
