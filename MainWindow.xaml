<Window x:Class="GoodsCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TabControl x:Name="maintable">
            <TabItem x:Name="GoodsTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Width="368">
                        <TextBlock Margin="3" TextAlignment="Center" Width="355"><Run Text="Goods"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>

            </TabItem>
            <TabItem x:Name="checkTab" Margin="-2,-2,-250,0">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Width="54">
                        <TextBlock Margin="3" TextAlignment="Left" Width="85">Check
                        </TextBlock>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
        <StackPanel Margin="0,31,87,0">
            <DataGrid x:Name="goodsGrid" Height="160" AutoGenerateColumns="False" Width="709">
                <DataGrid.Columns>
              
                    <DataGridTextColumn Binding="{Binding CATEGORY_NAME}" Header="Месяц"/>
                    <DataGridTextColumn Binding="{Binding GOODS_NAME}" Header="Год"/>
                    <DataGridTextColumn Binding="{Binding GOODS_PRICE}" Header="Опцион"/>
                    <DataGridTextColumn Binding="{Binding GOODS_DESCRIPTION}" Header="Страйк"/>

                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>

    </Grid>
</Window>
